<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="800.0">
    <children>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f0eb;" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <children>
                <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;" maxWidth="400.0">
                    <!-- Campo para pesquisar usuário -->
                    <VBox spacing="10.0">
                        <Text text="Pesquisar cliente" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                        <HBox spacing="10.0">
                            <TextField fx:id="pesquisarField" promptText="Nome" style="-fx-background-color: #e8dfd2; -fx-border-radius: 5;" />
                            <Button text="🔍" style="-fx-background-color: #e8dfd2; -fx-border-radius: 5;" />
                        </HBox>
                    </VBox>
                    <!-- Lista de usuários -->
                    <VBox spacing="10.0">
                        <Text text="Usuários" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                        <ListView fx:id="usuariosListView" prefHeight="200.0" style="-fx-background-color: #e8dfd2; -fx-border-radius: 5;" />
                    </VBox>
                    <!-- Botão Editar -->
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="editarButton" text="Editar" style="-fx-background-color: #e8dfd2; -fx-border-radius: 5;" />
                    </HBox>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
